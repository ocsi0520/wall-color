# =========================
# Stage 1: Build Spring Boot JAR
# =========================
FROM docker.io/maven:3.9.12-eclipse-temurin-25-alpine AS build

WORKDIR /app

# Copy Maven files first for caching
COPY pom.xml mvnw ./
COPY .mvn .mvn
RUN mvn dependency:go-offline

# Copy source code
COPY src ./src

# Build the application (skip tests to speed up build)
RUN mvn clean package -DskipTests

# =========================
# Stage 2: Runtime
# =========================
FROM docker.io/eclipse-temurin:25.0.1_8-jre-ubi10-minimal

WORKDIR /app

# Default port (can be overridden at runtime)
ENV APP_PORT=8080

# Copy built JAR from build stage
COPY --from=build /app/target/*.jar ./app.jar

# Expose port (optional)
EXPOSE 8080

# Use environment variable for port
ENTRYPOINT ["sh", "-c", "java -Dserver.port=${APP_PORT} -jar /app/app.jar"]
